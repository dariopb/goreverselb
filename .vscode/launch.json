    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/goreverselb",
            "env": { 
                "LOGLEVEL" : "debug",
                "TOKEN" : "1234",
                "PORT" : "9000",
                "HTTP_PORT" : "9001",
                //"NATS_PORT" : "9002",
                "AUTO_CERT_SUBJECT_NAME" : "localhost"
            },
            "args": [ "server" ]
        },
        {
            "name": "Debug client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/goreverselb",
            "env": { 
                "LOGLEVEL" : "debug",
                "TOKEN" : "1234",
                "LB_API_ENDPOINT" : "localhost:9999",
                "PORT" : "9999",
                "SERVICE_ENDPOINT" : "www.google.com:80",
                "SERVICE_NAME" : "tunnel_to_google",
                "INSECURE_TLS" : "true"
            },
            "args": [ "tunnel" ]
        },
        {
            "name": "Debug servicegroup",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/goreverselb",
            "env": { 
                "LOGLEVEL" : "debug",
                "TOKEN" : "xxxx",
                "LB_API_ENDPOINT" : "xxxx",
                "LB_SERVICE_GROUP_JSON" : "{\"srv-1234\":{\"name\":\"srv-1234\",\"ports\":[{\"port\":8000,\"protocol\":\"tcp\"}],\"backendIPs\":[\"127.0.0.1\"],\"deleted\":false}}",
            },
            "args": [ "tunnelgroup" ]
        },
        {
            "name": "Debug proxy",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/goreverselb",
            "env": { 
                "LOGLEVEL" : "debug",
                "TOKEN" : "1234",
                "SERVICE_ENDPOINT" : "www.google.com:80",
            },
            "args": [ "stdinproxy" ]
        },
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": { 
                "CONFIG_FILE" : "options.json",
                "LOGLEVEL" : "debug",
                "TOKEN" : "1234",
            },
            "args": []
        }
    ]
}